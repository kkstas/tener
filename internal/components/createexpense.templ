package components

import (
	"context"

	"github.com/kkstas/tjener/internal/url"
)

templ CreateExpenseForm(ctx context.Context, currencies []string) {
	<form
		action={ templ.SafeURL(url.Create(ctx, "expense", "create")) }
		method="post"
	>
		<div>
			<label>Name</label>
			<input class={ inputStyles } type="text" name="name"/>
		</div>
		<div>
			<label>Currency</label>
			<div class="relative">
				<select
					name="currency"
					class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:shadow-outline focus:outline-none focus:bg-white focus:outline-gray-800/10 focus:outline-1"
				>
					for _, currency := range currencies {
						<option>{ currency }</option>
					}
				</select>
				<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
					<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
				</div>
			</div>
		</div>
		<div>
			<label>Amount</label>
			<input class={ inputStyles } type="text" name="amount" value="1"/>
		</div>
		<div>
			<label>Category</label>
			<input class={ inputStyles } type="text" name="category" value="food"/>
		</div>
		<button class={ buttonStyles, "mx-1" }>Submit</button>
		<a class={ buttonStyles, "mx-1" } href={ templ.SafeURL(url.Create(ctx, "home")) }>Cancel</a>
	</form>
}

templ CreateExpensePage(ctx context.Context, currencies []string) {
	@BaseHTML(ctx) {
		@CreateExpenseForm(ctx, currencies)
	}
}
